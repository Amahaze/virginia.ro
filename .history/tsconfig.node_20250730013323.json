{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["vite.config.ts", "src/server/**/*", "src/components/**/*", "src/services/**/*"]
}